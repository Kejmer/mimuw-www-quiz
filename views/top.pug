extends layout

block content
  header
    h1(href="/") QUIZ IT
    h2 #{quiz_name}
    if quiz_avg
      h3 Średni czas odpowiedzi to #{quiz_avg}
    else
      h3 Nikt jeszcze nie rozwiązał quizu
  main
    if logged_in
      a(href="/q/" + quiz_id)
        section#start Przejdź do quizu
    section#scoreboard
      table
        tr
          th Data
          th Kto
          th Punkty
          th Średni czas odpowiedzi
        each row in scoreboard_rows
          tr
            th= row.date
            th= row.user
            th= row.points
            th= row.time
