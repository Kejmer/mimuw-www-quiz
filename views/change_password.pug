extends layout

block content
  form(method='POST' action='/change_password')
    input(type="hidden" name="_csrf" value=csrfToken)
    div.form-group
      label(for='password') Nowe hasło:
      br
      input#new_password.form-control(type='password', name='password')
    div.form-group
      label(for='repeated') Powtórz:
      br
      input#new_password.form-control(type='password', name='repeated')
    button(type='submit') ZMIEŃ TO
